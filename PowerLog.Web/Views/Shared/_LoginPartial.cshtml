@if (Request.IsAuthenticated)
{
    <ul class="nav pull-right">
        <li class="dropdown" id="nav-user">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                @User.Identity.Name
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a href="@Url.Action("WeightSettings", "Profile")"><i class="picons-16-basic2-253"></i>
                        Lbs / Kgs
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="@Url.Action("Manage", "Account")"><i class="picons-16-basic2-253"></i>
                        Login Settings
                    </a>
                </li>
                <li class="divider"></li>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style = "display:inline;" }))
                {
                    <li>
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    </li>
                }
            </ul>
        </li>
    </ul>
}
